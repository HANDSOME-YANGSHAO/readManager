/* rich-text 展现 editor 的内容不一致， 设置样式让其统一 */
.ql-container {
  display: block;
  position: relative;
  box-sizing: border-box;
  -webkit-user-select: text;
  user-select: text;
  outline: none;
  overflow: hidden;
  width: 100%;
  height: auto;
  min-height: 100px !important;
  padding: 0 20rpx;
  font-size: 50rpx;
}

.dynamicList {
  background-color: #f4f5f5;
}
.dynamicListItem {
  background-color: white;
  padding: 30rpx;
  margin: 30rpx 0;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
}
.author {
  margin-top: 80rpx;
  display: flex;
  align-items: center;
}
.baseInfo {
  margin-left: 50rpx;
}
.name {
  font-size: 35rpx;
  font-weight: 500;
  color: #515767;
}
.time {
  font: 24rpx 微软雅黑, arial, Hiragino Sans GB, 宋体, sans-serif;
  color: rgba(51, 51, 51, 0.5);
}

.avatar-open {
	width: 100rpx;
  height: 100rpx;
	clip-path: circle(50rpx at center);
}

.content {
  margin: 50rpx 0;
}

.tip {
  font-size: 30rpx;
  font-weight: 500;
  color: #515767;
}
.icons {
  margin-top: 40rpx;
  display: flex;
}
.icon-item {
  margin-right: 40rpx;
  display: flex;
}
.icon-item image {
  width: 50rpx;
  height: 50rpx;
}
.count {
  height: 50rpx;
}
.count .text {
  height: 25rpx;
  font: 20rpx 微软雅黑, arial, Hiragino Sans GB, 宋体, sans-serif;
  color: rgba(51, 51, 51, 0.5);
}

/* 发布动态 */
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
}

.card {
  position: relative;
  width: 90%;
  height: 95%;
  background-color: rgba(255, 255, 255);
  border-radius: 20rpx;
}

.card-header {
  padding: 0 10rpx;
  height: 70rpx;
  font-size: 50rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.submit {
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.submitButton {
  width: 90%;
}